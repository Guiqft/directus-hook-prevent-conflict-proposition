{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./",
		"strict": true,
		"esModuleInterop": true,
		"inlineSourceMap": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "src/templates"]
}
